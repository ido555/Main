<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean class="beans.Vet" scope="singleton" id="vet1">
		<property name="name" value="jeff"></property>
		<property name="address" value="123 st"></property>
		<property name="hourlyRate" value="666"></property>
	</bean>

	<bean class="beans.Pet" scope="prototype" id="myPet1">
		<constructor-arg name="name" value="Horosossoss"></constructor-arg>
		<constructor-arg name="type" value="Horse"></constructor-arg>
		<constructor-arg name="age" value="11"></constructor-arg>
		<property name="myVet" ref="vet1"></property>
	</bean>

	<bean class="beans.Pet" scope="prototype" id="myPet2">
		<constructor-arg name="name" value="Moshe"></constructor-arg>
		<constructor-arg name="type" value="Chinchilla"></constructor-arg>
		<constructor-arg name="age" value="5"></constructor-arg>
	</bean>

</beans>