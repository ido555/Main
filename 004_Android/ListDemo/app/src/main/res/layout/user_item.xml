<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="70sp">

    <TextView
        android:id="@+id/txtUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:text="name"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtUsrAddress"
        app:layout_constraintEnd_toEndOf="@+id/txtUsrAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtUsrId" />

    <TextView
        android:id="@+id/txtUsrAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsrName" />

    <TextView
        android:id="@+id/txtUsrId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:text="id: "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtUsrName"
        app:layout_constraintEnd_toEndOf="@+id/txtUsrName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>